{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": ["svelte", "node"],
    "baseUrl": ".",
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "paths": {
      "src": ["src/*"]
    },
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "outDir": "dist"
  },
  "include": [
    "**/*"
  ],
  "exclude": ["node_modules/*", "esbuild.config.mjs"],
}
